{
  "name": "Kondor",
  "description": "Koinos Wallet in your browser",
  "version": "0.2.3",
  "manifest_version": 3,
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_popup": "views/start.html",
    "default_icon": {
      "16": "/images/kondor-16.png",
      "32": "/images/kondor-32.png",
      "48": "/images/kondor-48.png",
      "128": "/images/kondor-128.png"
    }
  },
  "sandbox": {
    "pages": ["views/sandbox.html"]
  },
  "icons": {
    "16": "/images/kondor-16.png",
    "32": "/images/kondor-32.png",
    "48": "/images/kondor-48.png",
    "128": "/images/kondor-128.png"
  },
  "options_page": "options.html"
}
